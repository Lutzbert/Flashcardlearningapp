<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <!-- RecyclerView für die Anzeige der Lernkarten -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_lernkarten"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_delete"
        android:layout_below="@id/button_add"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kartenverwaltung"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_anzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="450dp"
        android:text="Lernkarten Anzeigen" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="350dp"
        android:text="Add Lernkarte" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="250dp"
        android:text="Delete Lernkarte" />

    <Button
        android:id="@+id/button_back_to_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="120dp"
        android:onClick="backToNavigation"
        android:text="Zurück zur Navigation" />

</RelativeLayout>